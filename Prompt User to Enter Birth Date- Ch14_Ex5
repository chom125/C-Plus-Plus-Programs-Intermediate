/*
The following program instructions where given for this program.
Write a program that prompts the user to enter a personâ€™s date of 
birth in numeric form such as 8-27-1980. The program then outputs 
the date of birth in the form: August 27, 1980. Your program must 
contain at least two exception classes: invalidDay and invalidMonth. 
If the user enters an invalid value for day, then the program should 
throw and catch an invalidDay object. Similar conventions for the invalid 
values of month and year. (Note that your program must handle a leap year.)
*/
#include <iostream>
#include <string>
#include "invalidDay.h"
#include "invalidMonth.h" 
 
using namespace std;

int getDay(int mth, int yr);
int getMonth();
int getYear();

bool isLeapYear(int yr);

void printBirthDate(int day, int month, int year);

int main()
{
    int day;
    int month = 0;
    int year;

    year = getYear();
    month = getMonth();
    day = getDay(month, year);

    cout << "Birth Day: ";
    printBirthDate(day, month, year);
     
    return 0;                                         
}

int getDay(int mth, int yr)
{
    bool done = false;                                
    int day = 0;

    do                                                
    {                                                 
        try                                           
        {                                             
            cout << "Enter birth day: ";     
            cin >> day;                           
            cout << endl;    

            switch (mth)
            {
            case 1: 
            case 3: 
            case 5: 
            case 7:
            case 8: 
            case 10: 
            case 12: 
                if (day < 1 || day > 31)
                    throw invalidDay("Day must be between 1 and 31.");
                break;
            case 4: 
            case 6: 
            case 9: 
            case 11: 
                if (day < 1 || day > 30)
                    throw invalidDay("Day must be between 1 and 30.");
                break;
            case 2: 
                if (isLeapYear(yr))
                {
                    if (day < 1 || day > 29)
                        throw invalidDay("Day must be between 1 and 29.");
                }
                else
                    if (day < 1 || day > 28)
                        throw invalidDay("Day must be between 1 and 28.");
            };

            done = true;       
        }    
        catch (invalidDay dayObj)
        {
            cout << dayObj.what() << endl;
        }
                                            
    } 
    while (!done);       

    return day;
}

int getMonth()
{
    bool done = false;                                
    int mth = 0;

    do                                                
    {                                                 
        try                                           
        {                                             
            cout << "Enter month number: ";     
            cin >> mth;                           
            cout << endl;    

            if (mth < 1 || mth > 12)
                throw invalidMonth();

            done = true;       
        }    
        catch (invalidMonth mthObj)
        {
            cout << mthObj.what() << endl;
        }
                                            
    } 
    while (!done);       

    return mth;
}

int getYear()
{
    bool done = false;                                
    int year = 0;

    do                                                
    {                                                 
        try                                           
        {                                             
            cout << "Enter birth year: ";     
            cin >> year;                           
            cout << endl;    

            if (year < 0)
                throw year;

            done = true;       
        }    
        catch (int year)
        {
            cout << year << "must be nonnegative." << endl;
        }
                                            
    } 
    while (!done);       

    return year;
}

bool isLeapYear(int yr)
{
    if (((yr % 4 == 0) && (yr % 100 != 0)) || yr % 400 == 0)
        return true;
    else
        return false;
}

void printBirthDate(int day, int month, int year)
{
    switch(month)
    {
    case 1:
        cout << "January";
        break;
    case 2:
        cout << "February";
        break;
    case 3:
        cout << "March";
        break;
    case 4:
        cout << " April";
        break;
    case 5:
        cout << "May";
        break;
    case 6:
        cout << "June";
        break;
    case 7:
        cout << "July";
        break;
    case 8:
        cout << "August";
        break;
    case 9:
        cout << "September";
        break;
    case 10:
        cout << "October";
        break;
    case 11:
        cout << "November";
        break;
    case 12:
        cout << "December";
        break;
    }

    cout << " " << day << ", " << year << endl;
}
